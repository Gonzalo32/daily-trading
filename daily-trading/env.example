# Configuración del Bot de Day Trading
# Copia este archivo como .env y configura tus valores

# Modo de Trading (PAPER para simulación, LIVE para trading real)
TRADING_MODE=PAPER

# Configuración de Mercado
MARKET=CRYPTO
SYMBOL=BTC/USDT
TIMEFRAME=1m

# Configuración de Estrategia
FAST_MA_PERIOD=5
SLOW_MA_PERIOD=20
RSI_PERIOD=14
RSI_OVERBOUGHT=70
RSI_OVERSOLD=30

# Configuración de Stop Loss y Take Profit
STOP_LOSS_PCT=0.01
TAKE_PROFIT_RATIO=2.0

# Configuración de Riesgo
MAX_POSITIONS=3
MAX_DAILY_LOSS=0.03
MAX_DAILY_GAIN=0.05
RISK_PER_TRADE=0.02

# Configuración de Horarios (para acciones)
TRADING_START_HOUR=9
TRADING_END_HOUR=16

# Configuración de Binance (para criptomonedas)
BINANCE_API_KEY=tu_api_key_aqui
BINANCE_SECRET_KEY=tu_secret_key_aqui
BINANCE_TESTNET=True

# Configuración de Alpaca (para acciones)
ALPACA_API_KEY=tu_api_key_aqui
ALPACA_SECRET_KEY=tu_secret_key_aqui
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# Configuración de Base de Datos
DATABASE_URL=sqlite:///trading_bot.db

# Configuración de Logging
LOG_LEVEL=INFO
LOG_FILE=logs/trading_bot.log

# Configuración de Notificaciones
ENABLE_NOTIFICATIONS=True
TELEGRAM_BOT_TOKEN=tu_bot_token_aqui
TELEGRAM_CHAT_ID=tu_chat_id_aqui

# Configuración de Machine Learning
ENABLE_ML=False
ML_MODEL_PATH=models/
RETRAIN_FREQUENCY=7

# Configuración de Backtesting
BACKTEST_START_DATE=2023-01-01
BACKTEST_END_DATE=2023-12-31
INITIAL_CAPITAL=10000

# Configuración de Dashboard
ENABLE_DASHBOARD=True
DASHBOARD_PORT=8000

# Configuración de Seguridad
MAX_RETRIES=3
RETRY_DELAY=5
CONNECTION_TIMEOUT=30
